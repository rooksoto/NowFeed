<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_card_view"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@color/colorPrimary"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:weightSum="12">

        <ImageView
            android:id="@+id/movie_poster_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="6dp"
            android:layout_weight="5"
            android:scaleType="centerCrop"
            android:cropToPadding="true" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            android:text="This is test text. Trump won the election, people are worried, it's a crazy world and stuff."
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/movie_blurb"
            android:layout_width="match_parent"
            android:layout_margin="6dp"
            android:text="This is test text. Trump won the election, people are worried, it's a crazy world and stuff."
            android:textColor="#03A9F4"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="4"
            android:gravity="top"
            android:layout_height="0dp"
            android:layout_weight="4" />
        <Button
            android:text="Showtimes/Tickets"
            android:textSize="10sp"
            android:background="@color/colorAccent"
            android:id="@+id/get_tickets_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

    </LinearLayout>
</android.support.v7.widget.CardView>

